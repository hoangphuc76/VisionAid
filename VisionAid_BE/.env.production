# =================================
# PRODUCTION ENVIRONMENT SETTINGS
# =================================

# Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# MongoDB Configuration (Production)
# Use MongoDB Atlas or your production MongoDB instance
MONGODB_URI=mongodb://localhost:27017/VisionAid
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=VisionAid
# MONGODB_USERNAME=your_production_username
# MONGODB_PASSWORD=your_production_password
# MONGODB_AUTH_SOURCE=admin
MONGODB_MAX_POOL_SIZE=20
MONGODB_SERVER_SELECTION_TIMEOUT=10000
MONGODB_SOCKET_TIMEOUT=60000

# JWT Configuration (Production - Strong Security)
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_IN_PRODUCTION_MIN_32_CHARS
JWT_EXPIRES_IN=1h

# Vision API Configuration (Production)
VISION_API_URL=http://your-production-vision-api:7000
VISION_API_TIMEOUT=60000

# Logging Configuration (Production - less verbose)
LOG_LEVEL=info

# Rate Limiting (Production - stricter)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration (Production - restrictive)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE
CORS_CREDENTIALS=true

# Security (Production)
HELMET_ENABLED=true
TRUST_PROXY=true

# SSL/TLS Configuration (Production)
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# Production Monitoring
ENABLE_SWAGGER=false
ENABLE_DEBUG=false
HOT_RELOAD=false

# External Services (Production)
SENTRY_DSN=your_sentry_dsn_for_error_tracking
NEW_RELIC_LICENSE_KEY=your_newrelic_key_for_monitoring

# Cache Configuration (Production)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=true
