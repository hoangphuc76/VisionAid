# =================================
# VISIONAID BACKEND CONFIGURATION
# =================================
# Copy this file to .env.development or .env.production and fill in your values

# Environment (development | production | test)
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/VisionAid
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=VisionAid
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000
MONGODB_SOCKET_TIMEOUT=45000

# JWT Configuration
JWT_SECRET=your-secret-key-min-32-characters
JWT_EXPIRES_IN=24h

# Vision API Configuration
VISION_API_URL=http://localhost:7000
VISION_API_TIMEOUT=30000

# Logging Configuration (error | warn | info | debug)
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=false

# Security
HELMET_ENABLED=true
TRUST_PROXY=false
FORCE_HTTPS=false
HSTS_MAX_AGE=31536000

# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
HOT_RELOAD=false

# External Services (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Cache Configuration (Optional)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS_CACHE=false
