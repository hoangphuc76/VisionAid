{
  "name": "visionaid_be",
  "version": "1.0.0",
  "description": "VisionAid Backend API with proper architecture",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:watch": "NODE_ENV=development nodemon --watch src --ext js,json server.js",
    "build": "echo \"No build step required for Node.js\"",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "docker:build": "docker build -t visionaid-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production visionaid-backend",
    "check-env": "node -e \"require('./src/config/env').loadEnvironmentConfig(); console.log('âœ… Environment configuration loaded successfully');\""
  },
  "keywords": ["visionaid", "accessibility", "api"],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "form-data": "^4.0.4",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "mongoose": "^8.0.3",
    "winston": "^3.11.0",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
