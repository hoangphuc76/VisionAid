{
  "name": "visionaid_be",
  "version": "1.0.0",
  "description": "VisionAid Backend API with proper architecture",
  "main": "server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "test": "cross-env NODE_ENV=test jest",
    "start:prod": "NODE_ENV=production node server.js",
    "start:dev": "NODE_ENV=development node server.js",
    "dev:watch": "NODE_ENV=development nodemon --watch src --ext js,json server.js",
    "build": "echo \"No build step required for Node.js\"",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage",
    "docker:build": "docker build -t visionaid-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production visionaid-backend",
    "check-env": "node -e \"require('./src/config/env').loadEnvironmentConfig(); console.log('âœ… Environment configuration loaded successfully');\"",
    "check-firebase": "node scripts/check-firebase.js",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=__tests__",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --maxWorkers=2"
  },
  "keywords": [
    "visionaid",
    "accessibility",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.5.0",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.8.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4"
  }
}
